---
import Layout from '../layouts/Layout.astro';
const siteTitle = "Local Vegan Kitchen: Sustainable Plant-Based Eats";
const siteDescription = "Discover delicious and sustainable vegan recipes using locally sourced ingredients.  Inspiring plant-based living for a healthier planet.";
---

<Layout title={siteTitle} description={siteDescription}>
	<main class="space-y-6">
		<section class="hero">
			<h1 class="text-4xl font-bold text-primary mb-4">Welcome to Local Vegan Kitchen</h1>
			<p class="text-lg">Your guide to delicious, sustainable, and plant-based eating. Discover recipes, local farms, and vegan-friendly businesses.</p>
			<img src="https://placehold.co/800x400.png" alt="Vegan Meal" data-ai-hint="vegan food" class="rounded-lg shadow-md mt-4" />
		</section>

		<section class="recipes">
			<h2 class="text-2xl font-semibold text-primary mb-2">Featured Recipes</h2>
			<p>Explore our latest recipes using fresh, local ingredients.</p>
			
			<img src="https://placehold.co/600x300.png" alt="Local Farm" data-ai-hint="local farm" class="rounded-lg shadow-md mt-4" />
		</section>

		<section class="farms">
			<h2 class="text-2xl font-semibold text-primary mb-2">Local Farms & Businesses</h2>
			<p>Find sustainable farms and vegan businesses in your area.</p>
		</section>

		<section class="about">
			<h2 class="text-2xl font-semibold text-primary mb-2">About Us</h2>
			<p>Learn about our mission to promote veganism and sustainable eating.</p>
		</section>
	</main>
</Layout>