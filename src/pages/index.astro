---
import Layout from '../layouts/Layout.astro';

const siteTitle = "Local Vegan Kitchen: Sustainable Plant-Based Eats";
const siteDescription = "Discover delicious and sustainable vegan recipes using locally sourced ingredients.  Inspiring plant-based living for a healthier planet.";
---

<Layout title={siteTitle} description={siteDescription}>
	<main class="space-y-6">
		<section class="hero">
			<h1 class="text-4xl font-bold text-primary mb-4">Welcome to Local Vegan Kitchen</h1>
			<p class="text-lg">Your guide to sustainable plant-based eating with locally sourced ingredients. Explore our recipes, discover local farms, and join our community!</p>
			<img src="https://placehold.co/800x400.png" alt="Vegan Food" class="rounded-lg shadow-md mt-4" data-ai-hint="vegan food"/>
		</section>

		<section class="featured-recipes">
			<h2 class="text-2xl font-semibold text-accent mb-2">Featured Recipes</h2>
			<p>Check out our latest and greatest vegan recipes, perfect for any occasion.</p>
			<img src="https://placehold.co/800x400.png" alt="Local Farm" class="rounded-lg shadow-md mt-4" data-ai-hint="local farm"/>
		</section>

		<section class="local-farms">
			<h2 class="text-2xl font-semibold text-accent mb-2">Support Local Farms</h2>
			<p>Find nearby farms offering fresh, sustainable produce for your vegan meals.</p>
		</section>

		<section class="user-submissions">
			<h2 class="text-2xl font-semibold text-accent mb-2">Share Your Creations</h2>
			<p>Submit your own vegan recipes and farm listings to be featured on our site!</p>
		</section>
	</main>
</Layout>